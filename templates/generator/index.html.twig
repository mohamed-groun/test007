<style>
    /* ============================
   PRICING SECTION
============================ */

    #pricing {
        font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    }

    /* Card global */
    #pricing .card {
        border-radius: 1.25rem;
        transition: all 0.35s ease;
        background: #ffffff;
    }

    /* Hover animation */
    #pricing .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 1.25rem 2.5rem rgba(0, 0, 0, 0.08);
    }

    /* Card body spacing */
    #pricing .card-body {
        padding: 2.5rem 2rem;
    }

    /* Titles */
    #pricing h6 {
        font-size: 0.75rem;
        letter-spacing: 0.08em;
        font-weight: 600;
    }

    #pricing h2 {
        font-size: 2.4rem;
        letter-spacing: -0.02em;
    }

    /* Text */
    #pricing p {
        font-size: 0.95rem;
    }

    /* Feature list */
    #pricing ul li {
        font-size: 0.95rem;
        padding-left: 1.6rem;
        position: relative;
    }

    /* Check icon */
    #pricing ul li::before {
        content: "✔";
        position: absolute;
        left: 0;
        top: 0;
        color: #0d6efd;
        font-weight: 600;
    }

    /* Disabled feature */
    #pricing ul li.text-muted::before {
        content: "✖";
        color: #adb5bd;
    }

    /* Buttons */
    #pricing .btn {
        padding: 0.7rem 1.25rem;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    /* Button hover */
    #pricing .btn:hover {
        transform: scale(1.03);
    }

    /* ============================
       PRO CARD (HIGHLIGHT)
    ============================ */

    #pricing .border-primary {
        border-width: 2px !important;
    }

