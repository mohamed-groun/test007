    });
</script>
    <h5 class="mb-3 text-center">Aperçu du PDF</h5>
    <div id="canvasContainer" class="supports-row"></div>

    <script>
        function createDefaultRenderPreviewCanvas() {
            const container = document.getElementById("canvasContainer");
            container.innerHTML = ''; // vider le container

            // Créer une carte similaire à renderPreview
            const card = document.createElement('div');
            card.className = 'sheet-card';
            card.innerHTML = `
        <div class="canvas-wrapper">
            <canvas></canvas>
        </div>
    `;
            container.appendChild(card);

            const canvas = card.querySelector('canvas');
            const ctx = canvas.getContext('2d');

            // Dimensions par défaut (A4)
            const supportWidth = 210;  // mm
            const supportHeight = 297; // mm
            const scale = 2; // facteur d'agrandissement
            canvas.width = supportWidth * scale;
            canvas.height = supportHeight * scale;
            canvas.style.width = `${canvas.width}px`;
            canvas.style.height = `${canvas.height}px`;

            // Bordure
            ctx.strokeStyle = '#111827';
            ctx.lineWidth = 1.5;
            ctx.strokeRect(0, 0, canvas.width, canvas.height);

            // Zone placeholder pour items (gris clair)
            ctx.fillStyle = 'rgba(238,238,238,0.3)'; // gris clair mais semi-transparent
            ctx.fillRect(10 * scale, 10 * scale, canvas.width - 20 * scale, canvas.height - 60 * scale);

            // Banner bleu en bas
            const bannerHeightPx = 38 * scale;
            ctx.fillStyle = 'rgba(59,130,246,0.6)'; // bleu semi-transparent
            ctx.fillRect(0, canvas.height - bannerHeightPx, canvas.width, bannerHeightPx);

            // Texte sur le banner
            ctx.fillStyle = '#ffffff';
            ctx.font = `${12 * scale}px sans-serif`;
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';
            ctx.fillText('Made with love DTF optimizer', canvas.width / 2, canvas.height - bannerHeightPx / 2);
        }

        // Créer le canvas par défaut au chargement
        createDefaultRenderPreviewCanvas();
    </script>



{% endblock %}