<!-- ========================= preloader start ========================= -->
<div id="preloader" class="preloader">
    <div class="loader">
        <div class="spinner">
            <div class="spinner-container">
                <div class="spinner-rotator">
                    <div class="spinner-left">
                        <div class="spinner-circle"></div>
                    </div>
                    <div class="spinner-right">
                        <div class="spinner-circle"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ========================= preloader end ========================= -->

<!-- ========================= header-2 start ========================= -->

<header class="header header-2">
    <div class="navbar-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg">
                        <a class="navbar-brand" href="{{ path('app_generator') }}">
                            <img src="{{ asset('/img/logo.jpg') }}" alt="Logo"/>
                        </a>
                        <button class="navbar-toggler" type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent2"
                                aria-controls="navbarSupportedContent2"
                                aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent2">
                            <ul id="nav2" class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a class="page-scroll active"
                                       href="{{ path('app_generator') }}">{{ 'Home'|trans({}, 'HomePage') }}</a>
                                </li>
                                <li class="nav-item">
                                    <div class="dropdown ms-auto">
                                        <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center"
                                                type="button"
                                                data-bs-toggle="dropdown"
                                                aria-expanded="false">
                                            {% if app.request.locale == 'fr' %}
                                                <span class="fi fi-fr me-2"></span> FR
                                            {% elseif app.request.locale == 'en' %}
                                                <span class="fi fi-gb me-2"></span> EN
                                            {% elseif app.request.locale == 'es' %}
                                                <span class="fi fi-es me-2"></span> ES
                                            {% elseif app.request.locale == 'it' %}
                                                <span class="fi fi-it me-2"></span> IT
                                            {% elseif app.request.locale == 'de' %}
                                                <span class="fi fi-de me-2"></span> DE
                                            {% endif %}
                                        </button>

                                        <ul class="dropdown-menu dropdown-menu-end shadow">
                                            <li>
                                                <a class="dropdown-item d-flex align-items-center {{ app.request.locale == 'fr' ? 'active' : '' }}"
                                                   href="{{ path('app_generator', {'_locale': 'fr'}) }}">
                                                    <span class="fi fi-fr me-2"></span> Français
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item d-flex align-items-center {{ app.request.locale == 'en' ? 'active' : '' }}"
                                                   href="{{ path('app_generator', {'_locale': 'en'}) }}">
                                                    <span class="fi fi-gb me-2"></span> English
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item d-flex align-items-center {{ app.request.locale == 'es' ? 'active' : '' }}"
                                                   href="{{ path('app_generator', {'_locale': 'es'}) }}">
                                                    <span class="fi fi-es me-2"></span> Español
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item d-flex align-items-center {{ app.request.locale == 'it' ? 'active' : '' }}"
                                                   href="{{ path('app_generator', {'_locale': 'it'}) }}">
                                                    <span class="fi fi-it me-2"></span> Italiano
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item d-flex align-items-center {{ app.request.locale == 'de' ? 'active' : '' }}"
                                                   href="{{ path('app_generator', {'_locale': 'de'}) }}">
                                                    <span class="fi fi-de me-2"></span> Deutsch
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>

                                    <li class="nav-item">
                                        <a class="page-scroll"
                                          href="{{ path('app_generator') ~ '#feature' }}">{{ 'Fonctionnalités'|trans({}, 'HomePage') }}</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="page-scroll"  href="{{ path('app_generator') ~ '#pricing' }}">{{ 'Pricing'|trans({}, 'HomePage') }}</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="page-scroll"
                                            href="{{ path('app_generator') ~ '#partner' }}">{{ 'Partenaria'|trans({}, 'HomePage') }}</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="page-scroll" href="{{ path('app_generator') ~ '#contact' }}">{{ 'Contact'|trans({}, 'HomePage') }}</a>
                                    </li>

                            </ul>

                            {% if app.request.attributes.get('_route') != 'app_generator_2' %}
                            <div class="buttons">
                                <a href="{{ path('app_generator_2') }}" rel="nofollow" target="blank"
                                   class="button radius-10 wow fadeInUp"
                                   data-wow-delay=".7s">{{ 'StartNow'|trans({}, 'HomePage') }}</a>
                            </div>
                            {% endif %}

                            {% if app.user %}
                                <div class="dropdown">

                                    <a class="user-name dropdown-toggle"
                                       href="#"
                                       id="userDropdown"
                                       role="button"
                                       data-bs-toggle="dropdown"
                                       aria-expanded="false">
                                         <span class="ms-2 throne-icon">
                                                  {% if is_premium %}
                                                      <i class="fa-solid fa-crown"></i>
                                                  {% endif %}
            </span> {{ app.user.firstName }} {{ app.user.lastName }}
                                    </a>

                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_dashboard') }}">
                                                <i class="lni lni-dashboard"></i> Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">
                                                <i class="lni lni-exit"></i> {{ 'logout'|trans({}, 'HomePage') }}
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            {% else %}
                                <span class="user-name">
                                    <a href="{{ path('app_login') }}">{{ 'Login'|trans({}, 'HomePage') }}</a>
                                </span>
                            {% endif %}

                        </div>
                        <!-- navbar collapse -->
                    </nav>
                    <!-- navbar -->
                </div>
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div><!-- navbar area -->
</header>
<!-- ========================= header-2 end ========================= -->
{% block body %}

{% endblock %}

{# Inclusion du footer #}
{% include 'includes/footer.html.twig' %}

