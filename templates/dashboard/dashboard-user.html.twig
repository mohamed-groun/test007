{% extends 'base.html.twig' %}

{% trans_default_domain 'Dashboard' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets-admin/css/sb-admin-2.min.css') }}">
