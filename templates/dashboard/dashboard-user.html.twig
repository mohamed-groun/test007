                                            </div>


                                            <form id="downloadForm">
                                                <input type="hidden" name="id_file" value="{{ pdf.id }}">
                                                <button type="submit" class="btn btn-primary btn-sm w-100 mt-3">
                                                    ‚¨á {{ 'telecharger_pdf'|trans }}
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="col-12">
                                    <div class="alert alert-info">
                                        {{ 'aucun_pdf'|trans }}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <input type="hidden" id="csrf_favorite" value="{{ csrf_token('favorite_image') }}">
                </div>
            </div>
        </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ 'logout_modal.title'|trans }}</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">√ó</span>
                    </button>
                </div>
                <div class="modal-body">{{ 'logout_modal.body'|trans }}</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">{{ 'logout_modal.cancel'|trans }}</button>
                    <a class="btn btn-primary" href="login.html">{{ 'logout_modal.logout'|trans }}</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "25000",
                "extendedTimeOut": "10000"
            };

            document.addEventListener('click', function (e) {
                const btn = e.target.closest('.favorite-btn');
                if (!btn) return;

                const icon = btn.querySelector('i');
                const image = btn.dataset.image;
                const isActive = btn.classList.contains('active');
                const action = isActive ? 'remove' : 'add';
                const csrf = document.getElementById('csrf_favorite').value;

                fetch('{{ path("app_generator_favorite") }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-Requested-With': 'XMLHttpRequest',
                        'X-CSRF-TOKEN': csrf
                    },
                    body: new URLSearchParams({
                        image: image,
                        action: action
                    })
                })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            btn.classList.toggle('active');
                            icon.classList.toggle('bi-star');
                            icon.classList.toggle('bi-star-fill');

                            if (data.action === 'added') {
                                toastr.success('{{ "toastr.favorite_added"|trans }}');
                            } else if (data.action === 'removed') {
                                toastr.info('{{ "toastr.favorite_removed"|trans }}');
                            }
                        } else {
                            toastr.error('{{ "toastr.error"|trans }}: ' + data.message);
                        }
                    })
                    .catch(err => {
                        console.error(err);
                        toastr.error('{{ "toastr.error"|trans }}');
                    });
            });


        });
    </script>

        <script>
        document.getElementById('downloadForm').addEventListener('submit', function(e) {
            e.preventDefault(); // Emp√™che le refresh de la page

            const formData = new FormData(this);

            fetch('{{ path("app_generator_download") }}', {
                method: 'POST',
                body: formData,
            })
                .then(response => {
                    if (!response.ok) throw new Error("Erreur lors du t√©l√©chargement");

                    // Ici on r√©cup√®re le blob pour g√©n√©rer le t√©l√©chargement
                    return response.blob();
                })
                .then(blob => {
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;

                    // Tu peux r√©cup√©rer le nom du fichier depuis ton serveur si besoin
                    a.download = 'file.pdf';
                    document.body.appendChild(a);
                    a.click();
                    a.remove();
                })
                .catch(err => {
                    console.error(err);
                    alert("Impossible de t√©l√©charger le PDF.");
                });
        });
    </script>

{% endblock %}
