                        <div class="row">
                            {% for pdf in pdfs %}
                                <div class="col-lg-3 col-md-4 col-sm-12 mb-4 ">
                                    <div class="card shadow-sm h-100">

<div class="card-title border-bottom pb-2 mb-3" style="    padding: 1rem;">
{{ pdf.titre |raw }}
</div>
                                        <div class="card-body">
                                            <p class="mb-2">
                                                üìÑ <b>{{ 'commande'|trans }} : {{ pdf.id }}</b>
                                            </p>
                                            <p class="text-muted mb-2">
                                                üìÖ {{ pdf.createdAt|date('d/m/Y H:i') }}
                                            </p>

                                            <h6 class="fw-bold mb-2 mt-3">
                                                üñºÔ∏è Images utilis√©es
                                            </h6>

                                            <div class="row g-2">
                                                {% for img in pdf.images %}
                                                    <div class="col-6">
                                                        <div class="card position-relative shadow-sm">
                                                            <img src="{{ img.file }}" class="card-img-top"
                                                                 style="height: 80px; object-fit: cover;" alt="Image">
                                                            <button type="button"
                                                                    class="btn btn-light btn-sm position-absolute top-0 end-0 m-1 shadow-sm favorite-btn {% if img.file in favorites %}active{% endif %}"
                                                                    data-image="{{ img.file }}"
                                                                    title="{{ 'favorite.title'|trans }}">
                                                                <i class="bi bi-star{% if img.file in favorites %}-fill text-warning{% endif %}"></i>
                                                            </button>
                                                        </div>
                                                    </div>
