{% extends 'base.html.twig' %}
{% trans_default_domain 'Dashboard' %}
    {% block stylesheets %}
        <!-- Custom fonts for this template-->
        {{ parent() }}
        <link  href="{{ asset('assets/css/sb-admin-2.min.css') }}" rel="stylesheet">
<style>
    .btn-trash {
        color: #6c757d;
        border: none;
        border-radius: 4px;
        padding: 0.25rem 0.5rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-trash:hover {
        color: #dc3545; /* fond rouge au hover */
    }


</style>
    {% endblock %}
{% block body %}

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include 'includes/sidebar.html.twig' %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content" class="pt-4">

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->

                    <div class="container">
                        <!-- Message d'information -->
                        <div class="alert alert-primary" role="alert">
                            üé® Personnalisez vos supports, et laissez l‚ÄôIA choisir ensuite le meilleur pour vos images !
                        </div>

                        <h2 class="mb-3">üìÑ Supports standards</h2>
                        <div class="row">
                            {% for support in globalSupports %}
                                <div class="col-md-4 mb-3">
                                    <div class="card shadow-sm">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ support.name }}</h5>
                                            <p class="card-text">
                                                {{ support.width }} √ó {{ support.height }} cm<br>
                                                <small class="text-muted">{{ support.description }}</small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <p>Aucun support standard</p>
                            {% endfor %}
                        </div>

                        <hr>

                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h2 class="mb-3">üõ†Ô∏è Mes supports personnalis√©s</h2>
                            <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addSupport">
                                <i class="bi bi-plus"></i>  Ajouter un support
                            </button>
                        </div>

                        <div id="supportsList" class="row">
                            {% for support in userSupports %}
                                <div class="col-md-4 mb-3">
                                    <div class="card border-primary position-relative">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ support.name }}</h5>
                                            <p class="card-text">
                                                {{ support.width }} √ó {{ support.height }} cm<br>
                                                {{ support.description }}
                                            </p>

                                            {# Bouton supprimer #}
                                            <button class="btn btn-sm btn-trash position-absolute top-0 end-0 m-2 delete-support-btn"
                                                    data-id="{{ support.id }}"
                                                    data-token="{{ csrf_token('delete_support' ~ support.id) }}">
                                                <i class="bi bi-trash"></i>
                                            </button>


                                        </div>
                                    </div>
                                </div>

                            {% else %}
                                <p class="text-muted">Vous n'avez pas encore de supports personnalis√©s</p>
                            {% endfor %}
                        </div>
                        <div class="modal fade" id="addSupport" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <form  id="supportForm" action="{{ path('support_add') }}" class="modal-content">

                                    <div class="modal-header">
                                        <h5 class="modal-title">Nouveau support</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>

                                    <div class="modal-body">
                                        <input class="form-control mb-2"
                                               name="name"
                                               placeholder="Nom du support"
                                               required>

                                        <input class="form-control mb-2"
                                               name="width"
                                               type="number"
                                               step="0.1"
                                               min="0"
                                               placeholder="Largeur (cm)"
                                               required>

                                        <input class="form-control mb-2"
                                               name="height"
                                               type="number"
                                               step="0.1"
                                               min="0"
                                               placeholder="Hauteur (cm)"
                                               required>

                                        <textarea class="form-control"
                                                  name="description"
                                                  placeholder="Description (facultatif)"></textarea>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">
                                            Enregistrer
                                        </button>
                                    </div>

                                </form>
                            </div>
                        </div>

                        <hr>
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h2 class="mb-3">üßµ Ma bobine personnalis√©e</h2>
                            <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#editRoll">
                                <i class="bi bi-pencil-square"></i> Modifier ma bobine
                            </button>
                        </div>

                        <div id="rollsList" class="row">
                            {% if roll %}
                                <div class="col-md-4 mb-3">
                                    <div class="card border-success">
                                        <div class="card-body">
                                            <p class="card-text">
                                                Largeur : {{ roll.width }} cm<br>
                                                Hauteur : {{ roll.minHeight }} - {{ roll.maxHeight }} cm<br>
                                                <b>{{ roll.description }}</b>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="col-md-4 mb-3">
                                    <div class="card border-success">
                                        <div class="card-body">
                                            <p class="card-text">
                                                Largeur : 54 cm<br>
                                                Hauteur : 100 - 900 cm<br>
                                                <b>Roll-up de 54 cm de largeur,  de 100 √† 900 cm de hauteur</b>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Modal Modifier Bobine -->
                        <div class="modal fade" id="editRoll" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <form id="rollForm" action="{{ path('roll_save') }}" class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Modifier ma bobine</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-2">
                                            <input class="form-control" name="width" type="number" step="0.1" min="0"
                                                   placeholder="Largeur (cm)" required value="{{ roll.width|default('') }}">
                                        </div>

                                        <div class="row mb-2">
                                            <div class="col">
                                                <input class="form-control" name="min_height" type="number" step="0.1" min="0"
                                                       placeholder="Hauteur min (cm)" required value="{{ roll.minHeight|default('') }}">
                                            </div>
                                            <div class="col">
                                                <input class="form-control" name="max_height" type="number" step="0.1" min="0"
                                                       placeholder="Hauteur max (cm)" required value="{{ roll.maxHeight|default('') }}">
                                            </div>
                                        </div>

                                        <div class="mb-2">
                    <textarea class="form-control" name="description"
                              placeholder="Description (facultatif)">{{ roll.description|default('') }}</textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                                    </div>
                                </form>
                            </div>
                        </div>


                    </div>


                    {# CSRF token hidden pour JS #}
                    <input type="hidden" id="csrf_favorite" value="{{ csrf_token('favorite_image') }}">


                    <!-- Content Row -->

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">√ó</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <!-- Bootstrap core JavaScript-->
    {{ parent() }}
    <script src="assets-admin/js/sb-admin-2.min.js"></script>
    <script>
        $('#supportForm').on('submit', function (e) {
            e.preventDefault();

            let form = $(this);
            let url = form.attr('action');

            $.ajax({
                url: url,
                method: 'POST',
                data: form.serialize(),
                success: function (response) {
                    toastr.success(response.message);

                    // Fermer la modal
                    let modal = bootstrap.Modal.getInstance(document.getElementById('addSupport'));
                    modal.hide();

                    // Reset form
                    form[0].reset();

                    // Ajouter le support √† la liste (exemple simple)
                    $('#supportsList').append(`
                <div class="col-md-4 mb-3">
                    <div class="card border-primary">
                        <div class="card-body">
                            <h5>${response.support.name}</h5>
                            <p>${response.support.width} √ó ${response.support.height} cm</p>
                        </div>
                    </div>
                </div>
            `);
                },
                error: function (xhr) {
                    toastr.error(xhr.responseJSON?.message || 'Erreur serveur');
                }
            });
        });
        $('#rollForm').on('submit', function (e) {
            e.preventDefault();

            let form = $(this);
            let url = form.attr('action');

            $.ajax({
                url: url,
                method: 'POST',
                data: form.serialize(),
                success: function (response) {
                    toastr.success(response.message);

                    // Fermer la modal
                    let modal = bootstrap.Modal.getInstance(document.getElementById('editRoll'));
                    modal.hide();

                    // Mettre √† jour la carte affich√©e
                    $('#rollsList').html(`
                <div class="col-md-4 mb-3">
                    <div class="card border-success">
                        <div class="card-body">
                            <p class="card-text">
                                Largeur : ${response.roll.width} cm<br>
                                Hauteur : ${response.roll.min_height} - ${response.roll.max_height} cm<br>
                                ${response.roll.description || ''}
                            </p>
                        </div>
                    </div>
                </div>
            `);
                },
                error: function (xhr) {
                    toastr.error(xhr.responseJSON?.message || 'Erreur serveur');
                }
            });
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            if (toggleButton && sidebar) {
                toggleButton.addEventListener('click', () => {
                    sidebar.classList.toggle('d-none');
                });
            }
        });

    </script>
    <script>
        // Supprimer un support en AJAX
        $(document).on('click', '.delete-support-btn', function(e) {
            e.preventDefault();

            const button = $(this);
            const supportId = button.data('id');
            const csrfToken = button.data('token');

            $.ajax({
                url: '/support/' + supportId + '/delete',
                method: 'POST',
                data: { _token: csrfToken },
                success: function(response) {
                    toastr.success('Support supprim√© !');

                    // Supprime la carte
                    button.closest('.col-md-4').fadeOut(300, function() {
                        $(this).remove();
                    });
                },
                error: function(xhr) {
                    toastr.error(xhr.responseJSON?.message || 'Erreur lors de la suppression.');
                }
            });
        });

    </script>


{% endblock %}