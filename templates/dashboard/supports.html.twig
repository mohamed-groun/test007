{% extends 'base.html.twig' %}
{% trans_default_domain 'Dashboard' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-trash {
            color: #6c757d;
            border: none;
            border-radius: 4px;
            padding: 0.25rem 0.5rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-trash:hover {
            color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="wrapper">
        <!-- Sidebar -->
        {% include 'includes/sidebar.html.twig' %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column  generator-wrapper" >
            <!-- Main Content -->
            <div id="content" class="pt-4">
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="">
                        <!-- Message d'information -->
                        <div class="alert alert-primary" role="alert">
                            {{ 'supports_customization_message'|trans }}
                        </div>

                        <h3 class="mb-3">{{ 'standard_supports_title'|trans }}</h3>
                        <div class="row">
                            {% for support in globalSupports %}
                                <div class="col-md-4 mb-3">
                                    <div class="card shadow-sm">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ support.name }}</h5>
                                            <p class="card-text">
                                                {{ support.width }} × {{ support.height }} cm<br>
                                                <small class="text-muted">{{ support.description }}</small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <p>{{ 'no_standard_supports'|trans }}</p>
                            {% endfor %}
                        </div>
                        <hr>
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h3 class="mb-3">{{ 'custom_supports_title'|trans }}</h3>
                            <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addSupport">
                                <i class="bi bi-plus"></i> {{ 'add_support_button'|trans }}
                            </button>
                        </div>

                        <div id="supportsList" class="row">
                            {% for support in userSupports %}
                                <div class="col-md-4 mb-3">
                                    <div class="card border-primary position-relative">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ support.name }}</h5>
                                            <p class="card-text">
                                                {{ support.width }} × {{ support.height }} cm<br>
                                                {{ support.description }}
                                            </p>
                                            <button class="btn btn-sm btn-trash position-absolute top-0 end-0 m-2 delete-support-btn"
                                                    data-id="{{ support.id }}"
                                                    data-token="{{ csrf_token('delete_support' ~ support.id) }}">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <p class="text-muted">{{ 'no_standard_supports'|trans }}</p>
                            {% endfor %}
                        </div>

                        <!-- Modal Ajouter Support -->
                        <div class="modal fade" id="addSupport" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <form id="supportForm" action="{{ path('support_add') }}" class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">{{ 'new_support_modal_title'|trans }}</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <input class="form-control mb-2"
                                               name="name"
                                               placeholder="{{ 'support_name_placeholder'|trans }}"
                                               required>

                                        <input class="form-control mb-2"
                                               name="width"
                                               type="number"
                                               step="0.1"
                                               min="0"
                                               placeholder="{{ 'support_width_placeholder'|trans }}"
                                               required>

                                        <input class="form-control mb-2"
                                               name="height"
                                               type="number"
                                               step="0.1"
                                               min="0"
                                               placeholder="{{ 'support_height_placeholder'|trans }}"
                                               required>

                                        <textarea class="form-control"
                                                  name="description"
                                                  placeholder="{{ 'support_description_placeholder'|trans }}"></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">{{ 'save_button'|trans }}</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <hr>

                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h3 class="mb-3">{{ 'custom_roll_title'|trans }}</h3>
                            <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#editRoll">
                                <i class="bi bi-pencil-square"></i> {{ 'edit_roll_button'|trans }}
                            </button>
                        </div>

                        <div id="rollsList" class="row">
                            {% if roll %}
                                <div class="col-md-4 mb-3">
                                    <div class="card border-success">
                                        <div class="card-body">
                                            <p class="card-text">
                                                Largeur : {{ roll.width }} cm<br>
                                                Hauteur : {{ roll.minHeight }} - {{ roll.maxHeight }} cm<br>
                                                <b>{{ roll.description }}</b>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="col-md-4 mb-3">
                                    <div class="card border-success">
                                        <div class="card-body">
                                            <p class="card-text">
                                                Largeur : 54 cm<br>
                                                Hauteur : 100 - 900 cm<br>
                                                <b>Roll-up de 54 cm de largeur, de 100 à 900 cm de hauteur</b>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Modal Modifier Bobine -->
                        <div class="modal fade" id="editRoll" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <form id="rollForm" action="{{ path('roll_save') }}" class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">{{ 'edit_roll_button'|trans }}</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-2">
                                            <input class="form-control" name="width" type="number" step="0.1" min="0"
                                                   placeholder="{{ 'support_width_placeholder'|trans }}"
                                                   required value="{{ roll.width|default('') }}">
                                        </div>

                                        <div class="row mb-2">
                                            <div class="col">
                                                <input class="form-control" name="min_height" type="number" step="0.1" min="0"
                                                       placeholder="{{ 'support_height_placeholder'|trans }}"
                                                       required value="{{ roll.minHeight|default('') }}">
                                            </div>
                                            <div class="col">
                                                <input class="form-control" name="max_height" type="number" step="0.1" min="0"
                                                       placeholder="{{ 'support_height_placeholder'|trans }}"
                                                       required value="{{ roll.maxHeight|default('') }}">
                                            </div>
                                        </div>

                                        <div class="mb-2">
                                        <textarea class="form-control" name="description"
                                                  placeholder="{{ 'support_description_placeholder'|trans }}">{{ roll.description|default('') }}</textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">{{ 'save_button'|trans }}</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>

                    <input type="hidden" id="csrf_favorite" value="{{ csrf_token('favorite_image') }}">

                </div>
            </div>
        </div>
    </div>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ 'logout_modal_title'|trans }}</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">{{ 'logout_modal_body'|trans }}</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">{{ 'cancel_button'|trans }}</button>
                    <a class="btn btn-primary" href="login.html">{{ 'logout_button'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $('#supportForm').on('submit', function (e) {
            e.preventDefault();
            let form = $(this);
            let url = form.attr('action');

            $.ajax({
                url: url,
                method: 'POST',
                data: form.serialize(),
                success: function (response) {
                    toastr.success(response.message);
                    let modal = bootstrap.Modal.getInstance(document.getElementById('addSupport'));
                    modal.hide();
                    form[0].reset();
                    $('#supportsList').append(`
                    <div class="col-md-4 mb-3">
                        <div class="card border-primary">
                            <div class="card-body">
                                <h5>${response.support.name}</h5>
                                <p>${response.support.width} × ${response.support.height} cm</p>
                            </div>
                        </div>
                    </div>
                `);
                },
                error: function (xhr) {
                    toastr.error(xhr.responseJSON?.message || 'Erreur serveur');
                }
            });
        });

        $('#rollForm').on('submit', function (e) {
            e.preventDefault();
            let form = $(this);
            let url = form.attr('action');

            $.ajax({
                url: url,
                method: 'POST',
                data: form.serialize(),
                success: function (response) {
                    toastr.success(response.message);
                    let modal = bootstrap.Modal.getInstance(document.getElementById('editRoll'));
                    modal.hide();
                    $('#rollsList').html(`
                    <div class="col-md-4 mb-3">
                        <div class="card border-success">
                            <div class="card-body">
                                <p class="card-text">
                                    Largeur : ${response.roll.width} cm<br>
                                    Hauteur : ${response.roll.min_height} - ${response.roll.max_height} cm<br>
                                    ${response.roll.description || ''}
                                </p>
                            </div>
                        </div>
                    </div>
                `);
                },
                error: function (xhr) {
                    toastr.error(xhr.responseJSON?.message || 'Erreur serveur');
                }
            });
        });

        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            if (toggleButton && sidebar) {
                toggleButton.addEventListener('click', () => {
                    sidebar.classList.toggle('d-none');
                });
            }
        });

        $(document).on('click', '.delete-support-btn', function(e) {
            e.preventDefault();
            const button = $(this);
            const supportId = button.data('id');
            const csrfToken = button.data('token');

            $.ajax({
                url: '/support/' + supportId + '/delete',
                method: 'POST',
                data: { _token: csrfToken },
                success: function(response) {
                    toastr.success('Support supprimé !');
                    button.closest('.col-md-4').fadeOut(300, function() { $(this).remove(); });
                },
                error: function(xhr) {
                    toastr.error(xhr.responseJSON?.message || 'Erreur lors de la suppression.');
                }
            });
        });
    </script>
    <script>
        $("#sidebarToggle, #sidebarToggleTop").on('click', function(e) {
            $("body").toggleClass("sidebar-toggled");
            $(".sidebar").toggleClass("toggled");
            if ($(".sidebar").hasClass("toggled")) {
                $('.sidebar .collapse').collapse('hide');
            };
        });

        // Close any open menu accordions when window is resized below 768px
        $(window).resize(function() {
            if ($(window).width() < 768) {
                $('.sidebar .collapse').collapse('hide');
            };

            // Toggle the side navigation when window is resized below 480px
            if ($(window).width() < 480 && !$(".sidebar").hasClass("toggled")) {
                $("body").addClass("sidebar-toggled");
                $(".sidebar").addClass("toggled");
                $('.sidebar .collapse').collapse('hide');
            };
        });

        // Prevent the content wrapper from scrolling when the fixed side navigation hovered over
        $('body.fixed-nav .sidebar').on('mousewheel DOMMouseScroll wheel', function(e) {
            if ($(window).width() > 768) {
                var e0 = e.originalEvent,
                    delta = e0.wheelDelta || -e0.detail;
                this.scrollTop += (delta < 0 ? 1 : -1) * 30;
                e.preventDefault();
            }
        });

        // Scroll to top button appear
        $(document).on('scroll', function() {
            var scrollDistance = $(this).scrollTop();
            if (scrollDistance > 100) {
                $('.scroll-to-top').fadeIn();
            } else {
                $('.scroll-to-top').fadeOut();
            }
        });

        // Smooth scrolling using jQuery easing
        $(document).on('click', 'a.scroll-to-top', function(e) {
            var $anchor = $(this);
            $('html, body').stop().animate({
                scrollTop: ($($anchor.attr('href')).offset().top)
            }, 1000, 'easeInOutExpo');
            e.preventDefault();
        });
    </script>
{% endblock %}
